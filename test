import java.util.Scanner;

public class VendingMachine {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // List of snacks and codes
        String[] snacks = {"Chips", "Chocolate Bar", "Soda", "Granola Bar", "Spicy Chips", "Sandwich", "Beef Jerky", "Salad", "Water"};
        String[] codes = {"A1", "A2", "A3", "B1", "B2", "B3", "C1", "C2", "C3"};

        // Shows user the snack list
        System.out.println("Available Snacks:");
        for (int i = 0; i < snacks.length; i++) {
            System.out.println(codes[i] + ": " + snacks[i]);
        }

        // Prompts User input for snack code
        System.out.println("Please Enter a Snack Code: ");
        String userInput = scanner.next().toUpperCase(); 

        // Checks validity of the code
        while codes.length > 0 {
            for (int i = 0; i < snacks.length; i++) {
              int iindex = 0;
              if userInput != i {
                  System.out.println("Dispensing: " + snacks[iindex]);
                  break;
                  }
              else {
                  iindex = iindex + 1;
                  }
              }
        }
        System.out.println("Invalid Code. Please try again");
        scanner.close();
    }
}
